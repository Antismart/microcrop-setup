# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
BASE_DOMAIN=microcrop.app
# CORS_ORIGIN is now handled automatically based on BASE_DOMAIN and NODE_ENV
# Development: localhost, network.localhost, portal.localhost
# Production: microcrop.app, www.microcrop.app, network.microcrop.app, portal.microcrop.app

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/microcrop

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://user:password@localhost:5672

# Logging
LOG_LEVEL=info

# Africa's Talking
AT_USERNAME=sandbox
AT_API_KEY=your_api_key
AT_SHORTCODE=*384*12345#

# WeatherXM Pro API
WEATHERXM_API_KEY=your_weatherxm_pro_api_key
WEATHERXM_API_URL=https://pro.weatherxm.com/api/v1
WEATHERXM_WEBHOOK_SECRET=your_webhook_secret

# Spexi Satellite
SPEXI_API_KEY=your_key
SPEXI_API_URL=https://api.spexi.com/v1

# Swypt Payment Gateway (USDC on Base only)
SWYPT_API_KEY=your_key
SWYPT_API_SECRET=your_secret
SWYPT_API_URL=https://pool.swypt.io/api
SWYPT_PROJECT_NAME=microcrop
TREASURY_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Blockchain (Base Sepolia)
NETWORK=base
RPC_URL=https://sepolia.base.org
CHAIN_ID=84532
CONTRACT_ADDRESS=0x...
ORACLE_PRIVATE_KEY=0x...
# USDC Token Address on Base
USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# JWT Secret (for admin authentication)
JWT_SECRET=your_jwt_secret_key_change_in_production

# SMS Notifications
SMS_ENABLED=true
SMS_SENDER_ID=MICROCROP
